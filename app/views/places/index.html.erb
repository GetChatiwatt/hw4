<h1>Places</h1>

<% if @user != nil %>
<ul>
  <% for place in @places %>
    <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
  <% end %>
</ul>

<p>
  <a href="/places/new" class="btn btn-success">New place</a>
</p>

  <% else %>
  You must first <a href="/login">login</a> to post.
<% end %>